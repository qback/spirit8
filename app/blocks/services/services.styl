.services
	font-family $opensans
	padding-top 92px
	padding-bottom 96px
	offset-section()

	&__wrapper
		wrapper()

		+below(1024px)
			padding-x 60px

		+below(1024px)
			padding-x 20px

	&__title
		color #222
		font-size 44px
		line-height (44/44)
		text-transform uppercase
		font-weight 300
		text-align center
		position relative
		decor()
		margin-bottom 50px

		+below(1024px)
			font-size 40px
			margin-bottom 60px

		+below(768px)
			font-size 36px
			margin-bottom 50px

		& span
			font-weight 600

	&__subtitle
		color #6c6c6c
		font-size 16px
		font-style italic
		line-height (24/16)
		text-align center
		margin-bottom 100px

		+below(1024px)
			font-size 15px
			margin-bottom 60px

		+below(768px)
			font-size 14px
			margin-bottom 40px

	&__feature-list
		margin-bottom 0

	&__feature
		display inline-block
		width prc(259/1140)
		margin-right prc(30/1140)
		text-align center
		vertical-align top

		+below(1024px)
			width 47%
			margin-right 5%
			margin-bottom 20px

		+below(500px)
			width 100%
			margin 0
			margin-bottom 10px

		&:nth-child(4)
			width prc(255/1140)
			margin-right 0

		&:nth-child(2n)

			+below(1024px)
				width 47%
				margin-right 0%

			+below(500px)
				width 100%

	&__feature-icon
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		fill #000

		&_screen
			svgSize $screen

			+below(500px)
				size 50%

		&_smartphone
			svgSize $smartphone

			+below(500px)
				size 50%

		&_camera
			svgSize $camera

			+below(500px)
				size 50%

		&_megaphone
			svgSize $megaphone

			+below(500px)
				size 50%


	&__feature-figure
		size 125px
		border-radius 50%
		border 6px solid #fcac45
		display inline-block
		position relative
		margin-bottom 23px

		+below(500px)
			float left
			size 80px
			margin-right 15px

	&__feature-title
		color #222
		font-size 25px
		font-weight 600
		line-height (24/25)
		text-transform uppercase
		margin-bottom 14px

		+below(500px)
			font-size 23px
			margin-bottom 12px

	&__feature-text
		color #222
		font-size 14px
		font-weight 400
		line-height (21/14)

		+below(500px)
			font-size 13px
			margin-left 20%
			width 75%

