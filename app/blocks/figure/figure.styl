//специальный класс для управления размерами сетки
.grid-sizer
	width 262px
	height 237px

	+below(768px)
		width 150px
		height 136px

	+below(400px)
		width 262px
		height 237px


.figure
	margin-bottom 30px
	overflow hidden;

	+below(400px)
		margin-bottom 5px

	&__wrapper
		position relative
		width 100%
		height 100%

	&__img
		position absolute
		width 100%
		height 100%


	&__caption
		position: absolute;
		bottom -100%;
		overflow hidden;
		width 100%;
		height 100%;
		transition bottom .3s;
		text-align center
		font-family $opensans
		padding-top 62px
		background-color #222
		padding-left 5px
		padding-right 5px

		+between(400px, 768px)
			padding-top 32px


	&__title
		font-weight 600
		font-size 20px
		line-height (24/20)
		color #fff
		text-transform uppercase
		margin-bottom 7px

		+between(400px, 768px)
			font-size 12px
			margin-bottom 5px

	&__desc
		color #b2b2b2
		font-size 14px
		margin-bottom 30px

		+between(400px, 768px)
			font-size 10px
			margin-bottom 10px

	&__link
		display inline-block
		size 40px
		position relative
		border-radius 50%

		&:hover
			transform scale(1.05)

			+between(400px, 768px)
				transform none

		+between(400px, 768px)
			size 30px


	&__link-icon
		size 100%
		fill #fcac45
		transition transform .2s

		&:hover
			transform scale(1.05)

			+between(400px, 768px)
				transform none

	&:hover &__caption
		bottom: 0


